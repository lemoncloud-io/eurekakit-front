{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "../../dist/out-tsc",
        "declaration": true,
        "types": ["node", "vite/client", "react", "react-dom"],
        "jsx": "react-jsx"
    },
    "include": [
